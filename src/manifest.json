{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "Watch videos together with friends, in real time",
  "default_locale": "en",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://movens.app/join"],
      "js": ["js/content-script.js"]
    }
  ],
  "optional_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": ["sidebar.html"],
  "content_security_policy": "script-src 'self' http://localhost:8098; connect-src 'self' http://localhost:8098 ws://localhost:8098 http://localhost:8080 ws://localhost:8080; object-src 'self'"
}
