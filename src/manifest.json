{
  "manifest_version": 2,
  "name": "Moduda",
  "version": "0.0.0.1",
  "description": "Watch videos together, 모두다",
  "default_locale": "en",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://moduda.live/join*"],
      "js": ["js/content-script.js"]
    }
  ],
  "optional_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": ["icons/*", "sidebar.html", "join.html"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; connect-src 'self' https://api.betterttv.net/3/emotes/shared/top http://localhost:* ws://localhost:* wss://moduda.live; object-src 'self'"
}
